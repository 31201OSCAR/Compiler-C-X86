#include "stack.h"
#include <iostream>
#include <cstdlib>
#include <cstdio>

int inicializarPilha(Stack *stack)
{
	stack = new Stack[sizeof(Stack)];

	stack->top->parenteses = 0;

	return 0;
}

int inserirElementoPilha(Stack *stack, char parenteses)
{
	if(!stack)
		return -1;

	StackNode *node;
	node = (StackNode*)malloc(sizeof(StackNode));
	if(!node)
	{
		return -1;
	}
	node->parenteses = parenteses;
	node->prev = stack->top;
	stack->top = node;

	return 0;
}
int apagarElementoPilha(Stack *stack)
{
	if(!stack || !stack->top)
	{
		return -1;
	}
	StackNode *temp;
	temp = stack->top;
	stack->top = temp->prev;

	free(temp);
	return 0;
}

int printPilha(Stack *stack)
{
	StackNode *temp = (StackNode*)malloc(sizeof(StackNode));;
	
	for (temp = stack->top; temp; temp = temp->prev)
	{
		printf("%c ", temp->parenteses);
	}
	printf("\n");

	return 0;
}
